---
import "../styles/global.css";

import NavBar from "../components/NavBar.astro";

interface Props{
  title: string;
}

const {title} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="transition-colors duration-200 bg-white text-black dark:bg-black dark:text-white">
    <NavBar />
    <main class="mx-auto p-6 font-inter">
      <slot />
    </main>
  </body>
</html>