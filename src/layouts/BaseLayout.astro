---
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mi sitio con Astro</title>
  </head>
  <body class="transition-colors duration-300 bg-white text-black dark:bg-black dark:text-white">
    <div class="container mx-auto p-4">
        <button id="theme-toggle" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md">
            Cambiar tema
        </button>
        <slot />
    </div>
    <script>
      // Simple script to change theme
      (document.getElementById('theme-toggle') as HTMLElement).addEventListener('click', () => {
        document.body.classList.toggle('dark');
      });
    </script>
  </body>
</html>