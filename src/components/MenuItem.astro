---

interface Props {
    href: string;
    text: string;
}

const {href, text} = Astro.props;
---

<a href={href} class="relative inline-block px-3 py-2 mx-1 text-black dark:text-white font-bold rounded-2xl overflow-hidden group 
    bg-gray-100 dark:bg-gray-800 transition-colors duration-300">
    <!-- Animated background -->
    <span class="absolute inset-0 bg-linear-to-bl from-blue-500 via-green-400 to-yellow-500 dark:from-indigo-deep dark:via-red-deep dark:to-orange-warm 
    scale-330 transition-opacity duration-300 opacity-0 group-hover:opacity-100 group-hover:animate-[spin_2s_linear_infinite]"></span>

    <span class="relative z-10">{text}</span>
</a>