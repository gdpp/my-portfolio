---

interface Props {
    href: string;
    text: string;
}

const {href, text} = Astro.props;
---

<a href={href} class="relative inline-block px-6 py-4 mx-1 text-black dark:text-white font-bold rounded-2xl overflow-hidden group 
    bg-gray-100 dark:bg-stone-800 transition-colors duration-300 
    shadow-md hover:shadow-lg hover:shadow-neon-pink/50 hover:dark:shadow-neon-yellow/50">
    
    <!-- Animated background -->
    <span class="absolute inset-0 bg-gradient-to-bl from-neon-blue to-neon-green dark:from-neon-yellow dark:via-neon-pink dark:to-neon-orange 
    scale-320 transition-opacity duration-300 opacity-0 group-hover:opacity-100 group-hover:animate-[spin_2s_linear_infinite]"></span>
    
    <span class="relative z-10">{text}</span>
</a>